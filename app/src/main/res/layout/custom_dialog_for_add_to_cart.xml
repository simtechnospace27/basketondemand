<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="#ffefebe9"
    android:padding="1.0dip">

    <!--<ImageView-->
        <!--android:id="@+id/ProductImage"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="140.0dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:src="@drawable/fruit"/>-->



    <android.support.v7.widget.CardView
            android:background="#ffefebe9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="1.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="5.0dip">

                    <TextView
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff413d3d"
                        android:background="#00000000"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Product Name : "
                        android:hint="0.2"
                        android:layout_weight="1"
                        android:inputType="number" />

                    <TextView
                        android:textSize="14.0dip"
                        android:textColor="#ff484444"
                        android:id="@+id/textPrductName"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Brinjal"
                        android:layout_weight="1" />

                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="5.0dip">

                    <TextView
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff413d3d"
                        android:background="#00000000"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="MRP : Rs."
                        android:id="@+id/necessaryCheckStrikeThrough"
                        android:hint="0.2"
                        android:layout_weight="1"
                        android:inputType="number" />

                    <TextView
                        android:textSize="14.0dip"
                        android:textColor="#ff484444"
                        android:id="@+id/textActualMRP"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="485.00"
                        android:layout_weight="1" />

                </LinearLayout>




                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="5.0dip">

                    <TextView
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff413d3d"
                        android:background="#00000000"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="New MRP : Rs."
                        android:hint="0.2"
                        android:layout_weight="1"
                        android:inputType="number" />

                    <TextView
                        android:textSize="14.0dip"
                        android:textColor="#ff484444"
                        android:id="@+id/textPrductMRP"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:textSize="17.0dip"
                    android:textColor="#ff3e3939"
                    android:id="@+id/textProductTitleSelected"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:text="" />

                <TextView
                    android:background="#ff9c9c9c"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginBottom="5.0dip" />

                <TextView
                    android:textSize="15.0dip"
                    android:textColor="#ff484444"
                    android:id="@+id/txtProductDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginBottom="5.0dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip">

                    <TextView
                        android:id="@+id/txtRs1"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Rs"
                        android:layout_weight="0.2" />

                    <TextView
                        android:textSize="14.0dip"
                        android:textColor="#ff484444"
                        android:id="@+id/txtProductRate"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="2.0" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/table_broder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textColor="#ffdc3dd1"
                        android:id="@+id/btnPlus"
                        android:background="@drawable/table_broder"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_weight="0.1" />

                    <EditText
                        android:textSize="15.0dip"
                        android:textColor="#ff413d3d"
                        android:gravity="center"
                        android:id="@+id/edtCount"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_weight="0.1"
                        android:inputType="number" />

                    <Button
                        android:textColor="#ffdc3dd1"
                        android:id="@+id/btnminus"
                        android:background="@drawable/table_broder"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_weight="0.1" />

                </LinearLayout>

                <TextView
                    android:textSize="13.0dip"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TO CARD"
            android:layout_weight="1"
            android:id="@+id/btnYes"
            android:background="#FF0000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnNo"
            android:text="CANCEL"
            android:background="#ffffff"/>


    </LinearLayout>

</LinearLayout>