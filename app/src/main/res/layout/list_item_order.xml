<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/linerVire"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:background="#ffefebe9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="3.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginBottom="3.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="110.0dip"
                    android:layout_height="110.0dip"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginTop="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_marginBottom="2.0dip"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip">

                    <TextView
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff4e4d4d"
                        android:id="@+id/txtTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginTop="1.0dip"
                        android:layout_marginRight="7.0dip"
                        android:layout_marginBottom="1.0dip"
                        android:text="Wheat"
                        android:lines="1" />

                    <TextView
                        android:textSize="14.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff868484"
                        android:id="@+id/txtDesc"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginRight="7.0dip"
                        android:text="Wheat"
                        android:lines="1" />

                    <TextView
                        android:textSize="13.0dip"
                        android:textColor="#ff504e4e"
                        android:id="@+id/txtQty"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginRight="7.0dip"
                        android:text="Qty" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_marginRight="7.0dip">

                        <TextView
                            android:textColor="#ff504e4e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount :" />

                        <TextView
                            android:textSize="14.0dip"
                            android:textColor="#ff504e4e"
                            android:id="@+id/txtAmount"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4.0dip"
                            android:layout_marginRight="4.0dip"
                            android:text="1801"
                            android:layout_weight="1.0" />

                        <Button
                            android:textSize="14.0dip"
                            android:textColor="#ff504e4e"
                            android:id="@+id/btnRemove"
                            android:background="@drawable/delete_icon"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_weight="0.1" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/table_broder"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginTop="5.0dip">

                        <Button
                            android:textColor="#ffdc3dd1"
                            android:id="@id/btnPlus"
                            android:background="@drawable/table_broder"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:layout_weight="1.0" />

                        <EditText
                            android:textSize="15.0dip"
                            android:textColor="#ff413d3d"
                            android:gravity="center"
                            android:id="@id/edtCount"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_weight="2.0"
                            android:inputType="number" />

                        <Button
                            android:textColor="#ffdc3dd1"
                            android:id="@id/btnminus"
                            android:background="@drawable/table_broder"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1.0" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>