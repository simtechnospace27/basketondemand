<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyBODAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/errorTextColor</item>

    </style>




    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/normalTextColor</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/normalTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">#4DFFFFFF</item>
        <item name="colorControlActivated">@color/colorPrimary</item>


    </style>





</resources>
